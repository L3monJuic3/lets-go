<div class="container">
  <div class="container-white">
    <h2>Chats</h2>

    <% @all_ordered_chats.each do |chat| %>
      <%= link_to booking_chat_path(chat.booking, chat.id), style: "color: #2C302E;", class: "text-decoration-none" do %>
        <div class="d-flex flex-row justify-content-start card-my-workouts">
          <div>
            <% if chat.booking.user.id == current_user.id %>
              <%= cl_image_tag chat.booking.workout.user.photo.key, class: "p-2", height: 72, width: 72, radius: "max", crop: "fill", gravity: "face" %>
            <% else %>
              <%= cl_image_tag chat.booking.user.photo.key, class: "p-2", height: 72, width: 72, radius: "max", crop: "fill", gravity: "face" %>
            <% end %>
          </div>
          <div class="ps-2">
              <% if chat.booking.user.id == current_user.id %>
                <h6><%= chat.booking.workout.user.username %></h6>
              <% else %>
                <h6><%= chat.booking.user.username %></h6>
              <% end %>
            <p>
              <%= chat.booking.workout.activity_type %><br>
              last message: <%= chat.messages.any? ? chat.messages.last.created_at : "Write the first message!" %><br>
              <%= chat.booking.workout.date.strftime("%e %h %Y") %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>

<%= render "shared/navbar_footer" %>

