<div class="form-workout p-3">
    <%= simple_form_for(@workout) do |f| %>
            <%= f.input :activity_type, as: :select, collection: [
              'Cycle',
              'Strength',
              'Park Workout',
              'Pilates Class',
              'Run',
              'Swim',
              'Tennis',
              'Walk',
              'Workout Class',
              'Yoga Class'
              ], prompt: 'Select Activity',
              label: false %>
                <%= f.input :intensity_level,
                            as: :radio_buttons,
                            collection: [[1, 'Gentle'], [2, 'Less Gentle'], [3, 'Moderate'], [4, 'Fairly Intense'], [5, 'Hardcore']],
                            label_method: :second,
                            value_method: :first,
                            label: "Level of exertion",
                            required: true %>
            <%= f.input :location, placeholder: 'Location' %>
            <%= f.input :date, as: :date,
                        html5: true,
                        label: 'Date' %>
            <%= f.input :start_time,
                        label: 'Time',
                        default: Time.parse('10:00') %>
            <%= f.input :duration, placeholder: 'E.g. 30', label: 'Duration (mins)' %>
            <%= f.input :description, placeholder: 'Provide full details of the workout' %>
            <%= f.input :photo, as: :file %>
            <%= f.submit "Save workout", class: "button-design"%>
          <% end %>
</div>
